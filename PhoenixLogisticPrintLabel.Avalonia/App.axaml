<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PhoenixLogisticPrintLabel.Avalonia.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme />
        
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Inter,Segoe UI,Helvetica Neue,sans-serif" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Background" Value="#F5F7FB" />
        </Style>

        <!-- Labels -->
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#111827" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>

        <!-- Card style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#FFFFFFFF" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="18" />
            <Setter Property="Margin" Value="0,0,0,14" />
        </Style>

        <!-- Input controls -->
        <Style Selector="TextBox, ComboBox">
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="#FFFFFFFF" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="MinWidth" Value="240" />
        </Style>

        <!-- Primary Button -->
        <Style Selector="Button.primary">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#2563EB" />
            <Setter Property="BorderBrush" Value="#2563EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#1E40AF" />
            <Setter Property="BorderBrush" Value="#1E40AF" />
        </Style>
        <Style Selector="Button.primary:disabled">
            <Setter Property="Opacity" Value="0.5" />
        </Style>
    </Application.Styles>
</Application>
